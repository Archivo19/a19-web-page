---
import { NETWORKS } from "../data/networks"

import { SECTIONS } from "../data/header"
---

<footer>
    <div class="w-full max-w-screen-xl mx-auto p-4 md:py-8">
        <div class="sm:flex sm:items-center sm:justify-between">
            <a href="/" class="flex items-center mb-4 sm:mb-0 space-x-3 rtl:space-x-reverse group">
                <span class="self-center text-2xl font-semibold whitespace-nowrap transition-colors duration-300 ease text-white group-hover:text-[darkgray]">Archivo 19 Studio</span>
            </a>
            <ul class="flex flex-wrap items-center mb-6 text-[15px] font-medium sm:mb-0 text-gray-400 md:gap-6 gap-4">
                {SECTIONS.map(section => (
                    <li>
                        <a href={section.href} class="hover:underline">{section.label}</a>
                    </li>
                ))}
            </ul>
        </div>
        <hr class="my-6 sm:mx-auto border-gray-700 lg:my-8" />
        <div class="sm:flex sm:items-center sm:justify-between">
            <span class="text-[15px] sm:text-center text-gray-400">Â© 2025 <a href="/" class="hover:underline">Archivo 19 Studio.</a> Todos los derechos reservados.
            </span>
            <div class="flex mt-4 sm:justify-center sm:mt-0 gap-5">
                {NETWORKS.map(network => (
                    <a href={network.href} class="transition-colors duration-300 ease text-gray-400 hover:text-white">
                        <network.icon class="w-4.5 h-4.5"/>
                        <span class="sr-only">{network.label}</span>
                    </a>
                ))}
            </div>
        </div>
    </div>
</footer>