---
import Next from "./Icons/Next.astro";
import Previous from "./Icons/Previous.astro";

const currentPath = Astro.url.pathname;

const IMAGES = [
    {
        src: "/image1.png",
        alt: "...",
        to: "0",
        current: true
    },
    {
        src: "/image2.png",
        alt: "...",
        to: "1"
    },
    {
        src: "/image3.jpg",
        alt: "...",
        to: "2"
    },
]
---

{currentPath === "/games/" ? 
    (<div class="absolute z-[1000] top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2">
        <button class="text-gray-900 bg-white border border-gray-300 font-medium rounded-full text-5xl px-8 pt-5 pb-7 dark:bg-gray-800 dark:text-white dark:border-gray-600">Creating horror...</button>
    </div>) : ""
}

<div id="default-carousel" class="relative w-full" data-carousel="slide">
    <div class="relative h-56 overflow-hidden md:h-[calc(100vh-60px)]">
        {
            IMAGES.map((image, index) => (
                <div class="hidden duration-700 ease-in-out" data-carousel-item>
                    <img src={image.src} class="absolute block w-full -translate-x-1/2 -translate-y-1/2 top-1/2 left-1/2" alt={image.alt}/>
                </div>
            ))
        }
    </div>

    <div class="absolute z-30 flex -translate-x-1/2 bottom-5 left-1/2 space-x-3 rtl:space-x-reverse">
        {
            IMAGES.map((image) => (
                <button type="button" class="w-3 h-3 rounded-full transition duration-300 ease" aria-current={image.current ? "true" : "false"} aria-label={`Slide ${image.to}`} data-carousel-slide-to={image.to}></button>
            ))
        }
    </div>

    <button type="button" class="absolute top-1/2 start-0 z-30 flex items-center justify-center px-4 -translate-y-1/2 group" data-carousel-prev>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 transition duration-300 ease">
            <Previous/>
            <span class="sr-only">Previous</span>
        </span>
    </button>
    
    <button type="button" class="absolute top-1/2 end-0 z-30 flex items-center justify-center px-4 -translate-y-1/2 group" data-carousel-next>
        <span class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-white/30 dark:bg-gray-800/30 group-hover:bg-white/50 dark:group-hover:bg-gray-800/60 transition duration-300 ease">
            <Next/>
            <span class="sr-only">Next</span>
        </span>
    </button>     
</div>